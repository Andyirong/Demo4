{
  "commands": {
    "archive": {
      "description": "归档当前分支并创建新的开发分支",
      "skill": "archive",
      "args": {
        "optional": [
          {
            "name": "push",
            "type": "boolean",
            "default": true,
            "description": "是否提交并推送当前分支"
          },
          {
            "name": "newBranch",
            "type": "boolean",
            "default": true,
            "description": "是否创建新的开发分支"
          },
          {
            "name": "description",
            "type": "string",
            "description": "新分支的描述信息"
          }
        ]
      },
      "examples": [
        "/archive",
        "/archive --push=false",
        "/archive --description='新功能开发'",
        "/archive --push=false --new-branch=false"
      ]
    },
    "archive-branch": {
      "description": "归档指定分支",
      "skill": "archive",
      "args": {
        "required": [
          {
            "name": "branchName",
            "type": "string",
            "description": "要归档的分支名称"
          }
        ],
        "optional": [
          {
            "name": "push",
            "type": "boolean",
            "default": false,
            "description": "是否推送归档"
          }
        ]
      },
      "examples": [
        "/archive-branch demo4-003",
        "/archive-branch demo4-003 --push=true"
      ]
    },
    "requirements": {
      "description": "从Git提交历史生成需求文档",
      "skill": "req-gen",
      "args": {
        "optional": [
          {
            "name": "output",
            "type": "string",
            "default": "./requirements",
            "description": "输出目录"
          },
          {
            "name": "branch",
            "type": "string",
            "description": "要分析的分支名称（默认当前分支）"
          },
          {
            "name": "limit",
            "type": "number",
            "description": "限制分析的提交数量"
          },
          {
            "name": "types",
            "type": "string",
            "description": "生成哪些类型的需求文档，用逗号分隔（PD,TD,QA,UI,OTHER）"
          }
        ]
      },
      "examples": [
        "/requirements",
        "/requirements --output=./docs/requirements",
        "/requirements --branch=feature/user-login",
        "/requirements --types=PD,QA",
        "/requirements --limit=20"
      ]
    }
  }
}